            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginBottom="10dp"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:elevation="6dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="0dp">

    <!-- Header Biru -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#82CFFD"
        android:padding="10dp">

        <TextView
            android:id="@+id/tanggalWaktu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="22 Agustus 2025 13.25 PM"
            android:textStyle="bold"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selesai"
            android:textColor="#000000"
            android:textSize="12dp"
            android:padding="6dp"
            android:layout_alignParentEnd="true"
            android:backgroundTint="#ffffff"
            android:background="@drawable/bg_status" />
    </RelativeLayout>

    <!-- Detail -->
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:id="@+id/nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:padding="6dp"
            android:textColor="@color/abuterang"
            android:text="Ruangan : LAB 02 (LAB Programming)"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/alamat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/abuterang"
            android:padding="6dp"
            android:text="SKS : 3 SKS"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/no_telp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:textColor="@color/abuterang"
            android:text="Mata Kuliah : Python Lanjutan"
            android:textStyle="bold"
            android:textSize="14sp" />

    </LinearLayout>
</LinearLayout>
